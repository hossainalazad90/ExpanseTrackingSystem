@model ExpanseTrackingSystem.Context.Expanse

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Expanse</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ExpanseCategoryId" class="control-label"></label>
                <select asp-for="ExpanseCategoryId" class ="form-control" asp-items="ViewBag.ExpanseCategoryId"></select>
            </div>
            <div class="form-group">
                <label asp-for="EntryDate" class="control-label"></label>
                <input asp-for="EntryDate" class="form-control" />
                <span asp-validation-for="EntryDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpanseAmount" class="control-label"></label>
                <input asp-for="ExpanseAmount" class="form-control" />
                <span asp-validation-for="ExpanseAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Details" class="control-label"></label>
                <textarea asp-for="Details" class="form-control"></textarea>
                <span asp-validation-for="Details" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">
    $("#EntryDate").on('change', function () {
        debugger;
        var toDayDate = new Date("@DateTime.Now.Date.ToString("yyyy/MM/dd")");
        var dateObj =new  Date($(this).val());
        let myDate = (dateObj.getUTCFullYear()) + "/" + (dateObj.getMonth() + 1) + "/" + (dateObj.getUTCDate());
        var dateVal = new Date(myDate);
        if (dateVal != "" && dateVal > toDayDate)
        {
            alert("Date can't be greater than Today.")
            $(this).val("");
        }

    });

</script>

}
